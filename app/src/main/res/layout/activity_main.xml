<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_file"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="Please select file">

                </TextView>

                <Button
                    android:id="@+id/button_select_file"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="Select File"></Button>
            </LinearLayout>

            <EditText
                android:id="@+id/edit_text_search_by_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="search images by name...">

            </EditText>

            <EditText
                android:id="@+id/edit_text_search_by_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="search images by id...">

            </EditText>

            <GridView
                android:id="@+id/grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:horizontalSpacing="8dp"
                android:nestedScrollingEnabled="true"
                android:numColumns="8"
                android:scrollbars="vertical"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="*">

                <TableRow android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/image_view_1"
                        style="@style/image_view_style"></ImageView>

                    <ImageView
                        android:id="@+id/image_view_2"
                        style="@style/image_view_style"></ImageView>

                    <ImageView
                        android:id="@+id/image_view_3"
                        style="@style/image_view_style"></ImageView>

                    <ImageView
                        android:id="@+id/image_view_4"
                        style="@style/image_view_style"></ImageView>

                    <ImageView
                        android:id="@+id/image_view_5"
                        style="@style/image_view_style"></ImageView>

                    <ImageView
                        android:id="@+id/image_view_6"
                        style="@style/image_view_style"></ImageView>

                    <ImageView
                        android:id="@+id/image_view_7"
                        style="@style/image_view_style"></ImageView>

                    <ImageView
                        android:id="@+id/image_view_8"
                        style="@style/image_view_style"></ImageView>
                </TableRow>

            </TableLayout>


        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>